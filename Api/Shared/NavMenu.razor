@using Microsoft.AspNetCore.Identity
@using Core.Entities.UserEntity
@using System.Security.Claims

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">MyWallet</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Profile">
                    <span class="oi oi-person"></span> Profile
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Wallets">
                    <img class="oi" src="Icons/money_wallet.svg" />
                    Wallets
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Cards">
                    <span class="oi oi-credit-card"></span> Cards
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
